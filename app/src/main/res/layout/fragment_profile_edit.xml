<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.profile.Profile">

    <LinearLayout
        android:id="@+id/liner1"
       android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/ic_person"
                app:civ_border_color="@color/purple_200"
                app:civ_border_width="1dp" />

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_edit"
                android:visibility="gone"
                android:background="@drawable/ic_outline_circle"
                android:elevation="3dp"
                android:layout_alignEnd="@+id/profile_profileImage"
                android:layout_alignBottom="@+id/profile_profileImage"
                android:id="@+id/profile_editImage" />





        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/edit_nameTv"
                android:hint="@string/username"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/black"
                android:textStyle=""
                android:textSize="18sp" />

            <EditText
                android:id="@+id/profile_volunteerTv_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Do you volunteer?"
                android:maxLines="3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/black"
                android:textStyle="" />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/combinedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner1">

        <LinearLayout
            android:id="@+id/liner2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/addFriendBtn_layout"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/addFriendTv"
                    android:textColor='@color/black'
                    android:text="Friends"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/profile_friends"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor='@color/black'
                    android:text="250"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor='@color/black'
                    android:text="Posts"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/profile_posts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor='@color/black'
                    android:text="250"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor='@color/black'
                    android:text="places"
                    android:id="@+id/volunteerPlaces"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/profile_volunteer_placesTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor='@color/black'
                    android:text="5"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/addFriend_layout"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/addressTv_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor='@color/black'
                    android:hint="Enter Address.."
                    android:layout_marginRight="100dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/workTv_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor='@color/black'
                    android:hint="Enter workplace.."
                    android:layout_marginRight="100dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/birthdayTv_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="100dp"
                    android:textColor='@color/black'
                    android:hint="Enter age.."
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"/>
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/update_progressBar"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ll1"
                    android:visibility="gone"
                    android:layout_above="@+id/login_sign_up_btn"/>

                <Button
                    android:id="@+id/profile_saveBtn"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:layout_marginLeft="110dp"
                    android:text="SAVE CHANGES"
                    />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/addFriend_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liner2"
            android:visibility="gone" >
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/purple_200"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/addFriend_layout"
            android:id="@+id/profile_view1"/>
    </RelativeLayout>
</RelativeLayout>