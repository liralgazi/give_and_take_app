<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@color/light_green"
        android:id="@+id/user_profileImage"
        app:civ_border_color="@color/light_green"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/user_nameTv"
        android:layout_toEndOf="@+id/user_profileImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/user_statusTv"
        android:layout_toEndOf="@+id/user_profileImage"
        android:layout_toRightOf="@+id/user_profileImage"
        android:layout_below="@+id/user_nameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volunteer Status"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>

</RelativeLayout>